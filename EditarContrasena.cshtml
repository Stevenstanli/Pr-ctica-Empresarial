@model Practica_Empresarial.Models.ModificarContrasena
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="content-wrapper">
    <section id="services" class="white">
        <div class="container">
            <div class="row">
                <div class="col-md-8 fade-up">
                    <div class="blog">
                        <div class="blog-item">
                            <div class="blog-content">
                                @using (Html.BeginForm("EditarContrasena", "Administrador", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    <h4 class="center">@ViewBag.TituloModificar</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <h4 class="main-title">@ViewBag.Correo : </h4>
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <h4 class="main-title">@ViewBag.Contrasena : </h4>
                                        <div class="col-md-10">
                                            @Html.PasswordFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <h4 class="main-title">@ViewBag.ContrasenaVerifica : </h4>
                                        <div class="col-md-10">
                                            @Html.PasswordFor(model => model.ContrasenaVerifica, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ContrasenaVerifica, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Guardar" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                                }
                                <div>
                                    <h4>
                                        @Html.ActionLink("Volver", "Principal")
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}