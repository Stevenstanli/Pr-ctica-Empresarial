@model Practica_Empresarial.Models.AsignarCategoria
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="content-wrapper">
    <section id="services" class="white">
        <div class="container">
            <div class="row">
                <div class="col-md-8 fade-up">
                    <div class="blog">
                        <div class="blog-item">
                            <div class="blog-content">
                                @if (ViewBag.Aviso == 1)
                                {
                                    <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                        <strong>¡Error!</strong> No se ha podido Crear.
                                    </div>
                                }
                                @if (ViewBag.Aviso == 2)
                                {
                                    <div class="alert alert-warning alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                        <strong>¡Advertencia!</strong> Revisar antes de enviar de nuevo.
                                    </div>
                                }
                                @using (Html.BeginForm("CrearCategoria", "Administrador", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <h4 class="center">@ViewBag.TituloIngreso</h4>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <h4 class="main-title">@ViewBag.NombreCategoria :</h4>
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(m => m.Nombre, new { @id = "name", @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Ingresar" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                }

                                <div>
                                    <h4>
                                        @Html.ActionLink("Volver a la Lista", "Categoria")
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}