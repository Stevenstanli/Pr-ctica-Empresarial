@model Practica_Empresarial.Datos.PA_SelectCotizacionRespuesta_Result
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="content-wrapper">
    <section id="services" class="white">
        <div class="container">
            <div class="gap"></div>
            <h4>@ViewBag.TituloEliminar</h4>
            <hr />
            <dl class="dl-horizontal">

                <dt>
                    @ViewBag.Asunto
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Asunto)
                </dd>

                <dt>
                    @ViewBag.Descripcion
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @ViewBag.Fecha
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Fecha_Contestacion)
                </dd>

            </dl>

            @using (Html.BeginForm("EliminarCotizacionRespuesta", "Administrador", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_CotizacionRespuesta)
                <div class="form-actions no-color center">
                    <input type="submit" value="Borrar" class="btn btn-default" />
                </div>
            }
            <div>
                <h4>
                    @Html.ActionLink("Volver a la Lista", "Cotizacion")
                </h4>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
