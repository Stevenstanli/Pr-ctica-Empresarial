@model Practica_Empresarial.Datos.PA_SelectPerfil_Result
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="content-wrapper">
    <section id="services" class="white">
        <div class="container">
            <div class="row">
                <div class="col-md-8 fade-up">
                    <div class="blog">
                        <div class="blog-item">
                            <div class="blog-content">
                                @using (Html.BeginForm("EditarPerfil", "Administrador", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <h4 class="center">@ViewBag.TituloModificar</h4>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.ID_Perfil)
                                        <div class="form-group">
                                            <h4 class="main-title">@ViewBag.NombrePerfil :</h4>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.NombrePerfil, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.NombrePerfil, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Guardar" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div>
                                    <h4>
                                        @Html.ActionLink("Volver a la Lista", "Perfil")
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
